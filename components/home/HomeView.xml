<?xml version="1.0" encoding="UTF-8"?>

<component name="HomeView" extends="Group">
    <interface > 
        <field id = "itemContent" type = "node" onChange = "showcontent"/>
        <field id = "focusPercent" type = "float" onChange = "showfocus"/> 
        <field id = "rowFocusPercent" type = "float" onChange = "showrowfocus"/>
    </interface>
    <script type="text/brightscript" uri="pkg:/components/home/HomeView.brs" />
    <children>
        <Poster
            id = "bgHomePoster"
            translation = "[0, 0]" 
            width = "1280"
            height = "722"
        />
        <Label id="titleText" 
          	text = "Welcome to Nazar`s Radio Channel!"
          	width = "850" 
          	height = "720" 
          	horizAlign = "left"
          	vertAlign = "center"
            translation = "[45, -220]"
            font = "font:LargeBoldSystemFont"
            color = "#39d43b"
        />
        <Label id="subtitleText" 
          	text = "This is most popular channel for me and my trainee program in this new project. Please support me in my difficult startup and I`ll show you results very soon!"
          	width = "650" 
          	height = "720" 
          	horizAlign = "left"
          	vertAlign = "center"
            translation = "[45, -120]"
            wrap = "true"
        />

        <RowList 
            id = "HomeList" 
            translation = "[75, 450]" 
            itemComponentName = "HomeListItem" 
            numRows = "1" 
            itemSize = "[1100, 200]" 
            rowItemSize = "[[128, 128]]" 
            showRowLabel = "[true]" 
            rowLabelOffset	= "[[10, 15]]"
            rowItemSpacing = "[[10, 0]]" 
            rowFocusAnimationStyle = "fixedFocusWrap" 
            vertFocusAnimationStyle = "floatingFocus" 
        />
        
    </children>

</component>
