<?xml version="1.0" encoding="utf-8" ?>

<component name="StationListItem" extends="Group">

    <interface > 
        <field id = "itemContent" type = "node" onChange = "showcontent"/>
        <field id = "focusPercent" type = "float" onChange = "showfocus"/> 
        <field id = "rowFocusPercent" type = "float" onChange = "showrowfocus"/>
    </interface>

    <script type = "text/brightscript" uri="pkg:/components/station/StationListItem.brs"/>

    <children >
        <Poster
          id = "itemPoster"
          translation = "[10.0, 0.0]"
          width = "100"
          height = "100">
    
          <Rectangle
            id = "itemMask"
            width = "138"
            height = "127"
            translation = "[-10.0, 0.0]"
            color = "0x101010FF" />
    
        </Poster>

        <Label
          id = "itemLabel"
          translation = "[13 , 100]"
          wrap = "true"
          horizAlign	= "center"
          vertAlign	= "center"
          lineSpacing = "0.75"
          width = "100"
          height = "30"
          opacity = "1.0" />
    </children>
    
</component>