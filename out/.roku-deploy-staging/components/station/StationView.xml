<?xml version="1.0" encoding="UTF-8"?>


<component name="StationView" extends="Group">  
    <interface>
        <field id = "endStatus" type = "string" />
    </interface>
    <script type = "text/brightscript" uri="pkg:/components/station/StationView.brs"/>  
    <script type = "text/brightscript" uri="pkg:/components/StationViewLogic.brs"/>  
    <script type = "text/brightscript" uri="pkg:/components/busyspinner/BusySpinner.brs"/>          
    <script type = "text/brightscript" uri="pkg:/components/videohandler/CustomVideoView.brs" />

    <children >

        <Video
            id = "stationAudioItem"
            width = "1280"
            height = "720"
            translation = "[0,0]"
            opacity = "0"
            
        />

        <Poster
            id = "bgStationPoster"
            translation = "[0, 0]" 
            width = "1280"
            height = "722"
        />

        <RowList 
            id = "StationListItem" 
            translation = "[130, 70]" 
            itemComponentName = "StationListItem" 
            numRows = "3" 
            itemSize = "[1100, 200]" 
            rowItemSize = "[[128, 128]]" 
            showRowLabel = "[true]" 
            rowLabelOffset	= "[[10, 15]]"
            rowItemSpacing = "[[10, 0]]" 
            rowFocusAnimationStyle = "fixedFocusWrap" 
            vertFocusAnimationStyle = "floatingFocus" 
        />

        <BusySpinner
          id = "busySpinner"
          visible = "true" 
        />

    </children>
</component>
