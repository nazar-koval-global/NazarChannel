<?xml version="1.0" encoding="utf-8" ?>

<component name="HomeListItem" extends="Group">

    <interface > 
        <field id = "itemContent" type = "node" onChange = "showcontent"/>
        <field id = "focusPercent" type = "float" onChange = "showfocus"/> 
        <field id = "rowFocusPercent" type = "float" onChange = "showrowfocus"/>
    </interface>

    <script type = "text/brightscript" uri="pkg:/components/content/home/HomeListItem.brs"/>

    <children >
        <Poster
          id = "homeItemPoster"
          translation = "[10.0, 0.0]"
          width = "100"
          height = "100">
    
          <Rectangle
            id = "homeItemMask"
            width = "130"
            height = "140"
            translation = "[0, 0]"
            color = "0x101010FF"
            opacity = "0.75" />
    
        </Poster>

        <Label
          id = "homeItemLabel"
          translation = "[13 , 100]"
          wrap = "true"
          horizAlign	= "center"
          vertAlign	= "center"
          lineSpacing = "0.75"
          width = "100"
          height = "30"
          opacity = "1.0" />
    </children>
    
</component>